set nocompatible
filetype off
execute 'set runtimepath+='.getcwd()
execute 'set runtimepath+='.getcwd().'/..'
set runtimepath+=vader.vim
set runtimepath+=~/.vim/bundle/vader.vim
filetype plugin indent on
syntax enable
set autoread
set hidden
set number

" try to silence 'Warning: terminal cannot highlight' warnings,
" which prevent test cases from closing until a human user hits enter
" highlight clear
" set noshowcmd
" set shortmess+=aoOtTWAIcF
" set cmdheight=5

let g:project_root = split(getcwd(), '/test')[0]
let g:dapper_logfile = g:project_root.'/test/LOGFILE'
let g:dapper_echo_messages = 'never'

if $DAPPER_TEST_DEBUG_LOGGING
  let g:dapper_log_buffer_writeback = 'every2'
endif

call dapper#AddDapperConfig(
  \ 'node',
  \ g:project_root.'/node_modules/vscode-mock-debug/out/debugAdapter.js',
  \ 'mock')
